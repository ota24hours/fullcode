# OTA24Hours Production Environment Configuration

# ===========================
# NODE.JS CONFIGURATION
# ===========================
NODE_ENV=production
PORT=5000
HOST=0.0.0.0

# ===========================
# DATABASE CONFIGURATION
# ===========================
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=ota_user
DB_PASSWORD=CHANGE_THIS_SECURE_PASSWORD
DB_DATABASE=travel_log

# Enable SSL for database connection in production
DB_SSL=false
DB_SSL_CA=
DB_SSL_KEY=
DB_SSL_CERT=

# ===========================
# JWT CONFIGURATION
# ===========================
JWT_SECRET=CHANGE_THIS_VERY_SECURE_JWT_SECRET_KEY_MINIMUM_32_CHARACTERS_LONG
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=CHANGE_THIS_REFRESH_TOKEN_SECRET_KEY
JWT_REFRESH_EXPIRES_IN=7d

# ===========================
# API CONFIGURATION
# ===========================
API_PREFIX=/api/v1
API_VERSION=1.0.0

# CORS Configuration
CORS_ORIGIN=https://ota24hours.com,https://admin.ota24hours.com
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================
# FILE UPLOAD CONFIGURATION
# ===========================
UPLOAD_PATH=/var/www/ota24hours/uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# Static files serving
STATIC_FILES_URL=https://api.ota24hours.com/uploads

# ===========================
# EMAIL CONFIGURATION
# ===========================
MAIL_HOST=smtp.your-email-provider.com
MAIL_PORT=587
MAIL_SECURE=false
MAIL_USERNAME=your-email@ota24hours.com
MAIL_PASSWORD=your-email-password
MAIL_FROM_NAME=OTA24Hours
MAIL_FROM_ADDRESS=noreply@ota24hours.com

# Email templates
EMAIL_TEMPLATE_PATH=/var/www/ota24hours/backend/templates

# ===========================
# APPLICATION URLs
# ===========================
FRONTEND_URL=https://ota24hours.com
ADMIN_URL=https://admin.ota24hours.com
API_URL=https://api.ota24hours.com

# ===========================
# SECURITY CONFIGURATION
# ===========================
# Session secret
SESSION_SECRET=CHANGE_THIS_SESSION_SECRET_KEY

# Password hashing rounds
BCRYPT_ROUNDS=12

# API Key for internal services
INTERNAL_API_KEY=CHANGE_THIS_INTERNAL_API_KEY

# ===========================
# PAYMENT GATEWAY CONFIGURATION
# ===========================
# PayPal Configuration
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_MODE=live

# Stripe Configuration
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Razorpay Configuration (if using)
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret

# ===========================
# THIRD-PARTY INTEGRATIONS
# ===========================
# Google Maps API
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Google OAuth
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret

# Facebook OAuth
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# SMS Service (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# ===========================
# LOGGING CONFIGURATION
# ===========================
LOG_LEVEL=info
LOG_FILE_PATH=/var/log/ota24hours/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Error tracking (Sentry)
SENTRY_DSN=your-sentry-dsn

# ===========================
# CACHING CONFIGURATION
# ===========================
# Redis Configuration (if using)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Cache TTL in seconds
CACHE_TTL=3600

# ===========================
# MONITORING & ANALYTICS
# ===========================
# Google Analytics
GA_TRACKING_ID=your-google-analytics-id

# Application monitoring
MONITORING_ENABLED=true
HEALTH_CHECK_PATH=/health

# ===========================
# BACKUP CONFIGURATION
# ===========================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket

# ===========================
# SSL/TLS CONFIGURATION
# ===========================
SSL_ENABLED=true
FORCE_HTTPS=true

# ===========================
# DEVELOPMENT SETTINGS
# ===========================
# Set to false in production
DEBUG=false
VERBOSE_LOGGING=false

# ===========================
# CUSTOM BUSINESS SETTINGS
# ===========================
# Commission rates
DEFAULT_COMMISSION_RATE=10
VENDOR_COMMISSION_RATE=5

# Booking settings
BOOKING_CONFIRMATION_TIMEOUT=30
PAYMENT_TIMEOUT=15

# Currency settings
DEFAULT_CURRENCY=USD
SUPPORTED_CURRENCIES=USD,EUR,INR,GBP

# Time zone
DEFAULT_TIMEZONE=UTC

# ===========================
# FEATURE FLAGS
# ===========================
ENABLE_USER_REGISTRATION=true
ENABLE_SOCIAL_LOGIN=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_SMS_VERIFICATION=false
ENABLE_MULTI_LANGUAGE=true
ENABLE_MULTI_CURRENCY=true
ENABLE_REVIEWS=true
ENABLE_NOTIFICATIONS=true

# ===========================
# MAINTENANCE MODE
# ===========================
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=We are currently performing maintenance. Please try again later.

# ===========================
# NOTES
# ===========================
# 1. Replace all "CHANGE_THIS_*" values with secure, production-ready values
# 2. Keep this file secure and never commit it to version control
# 3. Use environment-specific values for different deployment stages
# 4. Regularly rotate sensitive keys and passwords
# 5. Monitor logs for any configuration issues